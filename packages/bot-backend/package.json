    "express": "^5.2.1",
    "socket.io": "^4.8.3",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "@types/tmi.js": "^1.8.6",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
