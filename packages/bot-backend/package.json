{
  "name": "@bot-twitch/bot-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Twitch bot backend with task management and Spotify integration",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/app.js",
    "dev": "tsx app.ts",
    "lint": "biome check ./src",
