# Twitch Configuration
OAUTH_TOKEN=oauth:your_oauth_token_here
REFRESH_TOKEN=your_refresh_token_here
CLIENT_ID=your_twitch_client_id
CLIENT_SECRET=your_twitch_client_secret
TWITCH_USERNAME=your_bot_username
CHANEL_NAME=YOUR_CHANNEL_NAME

# Spotify Configuration
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/callback

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Features
ENABLE_SPOTIFY=true
ENABLE_TASKS=true

# Tasks Configuration
MAX_TASKS_PER_USER=50
MAX_TASKS_PER_COMMAND=5

# CORS Configuration (comma-separated for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_DEFAULT_MAX=5
RATE_LIMIT_DEFAULT_WINDOW=10000
RATE_LIMIT_HEAVY_MAX=2
RATE_LIMIT_HEAVY_WINDOW=30000

# Supabase Configuration
# URL pública (compartida con frontend)
SUPABASE_URL=https://your-project.supabase.co

# Anon Key - PÚBLICA (solo lectura con RLS)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key - PRIVADA (bypass RLS, solo backend)
# ⚠️ NUNCA expongas esta key en el frontend
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
