{
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noVar": "error",
				"useConst": "error"
			},
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentSize": 4
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "single"
		}
	},
	"files": {
		"include": ["src/**/*.ts", "src/**/*.js", "app.ts", "*.ts"],
		"ignore": ["node_modules/**", "data/**", "dist/**"]
	}
}
