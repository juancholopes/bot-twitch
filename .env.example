# Twitch Configuration
TWITCH_USERNAME=your_bot_username
OAUTH_TOKEN=oauth:your_oauth_token
CHANEL_NAME=your_channel_name
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
REFRESH_TOKEN=your_refresh_token

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Features
ENABLE_SPOTIFY=true
ENABLE_TASKS=true

# Tasks Configuration
MAX_TASKS_PER_USER=50
MAX_TASKS_PER_COMMAND=5

# CORS Configuration (comma-separated for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_DEFAULT_MAX=5
RATE_LIMIT_DEFAULT_WINDOW=10000
RATE_LIMIT_HEAVY_MAX=2
RATE_LIMIT_HEAVY_WINDOW=30000

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token
